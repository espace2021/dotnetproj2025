@page
@model CreateReviewModel
@using Microsoft.AspNetCore.Mvc.RazorPages;
@using MovieCrud.Entity;
@using Models;

 
@{
    ViewData["Title"] = "Create a Review";
}
 
<h1 class="bg-info text-white">Create a Review</h1>
 
<div asp-validation-summary="All" class="text-danger"></div>
<form method="post">
    <div class="form-group">
        <label asp-for="@Model.NewReview.ReviewerName"></label>
        <input type="text" asp-for="@Model.NewReview.ReviewerName" class="form-control" />
        <span asp-validation-for="@Model.NewReview.ReviewerName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.NewReview.Rating"></label>
        <input type="text" asp-for="@Model.NewReview.Rating" class="form-control" />
        <span asp-validation-for="@Model.NewReview.Rating" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="@Model.NewReview.Comment"></label>
        <textarea asp-for="NewReview.Comment" class="form-control"></textarea>
     </div>
    <div class="form-group">
        <label asp-for="NewReview.MovieId">Movie</label>
        <select asp-for="NewReview.MovieId" asp-items="Model.Movies" class="form-control">
            <option value="">-- Select a Movie --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
